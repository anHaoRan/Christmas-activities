body{width:10rem;margin:0 auto}*{margin:0;padding:0;box-sizing:border-box}a:active,a:hover,a:link,a:visited{text-decoration:none}.top{height:15.14667rem;background:url(../images/christmas/top_bg.jpg) 50%/cover;padding-top:.56rem}.header{width:8.10667rem;height:4.8rem;background:url(../images/christmas/logo.png) 50%/cover;margin:0 auto}.header h1{display:none}.turnplate{width:8.66667rem;height:8.66667rem;margin:0 auto;position:relative;margin-bottom:1.01333rem}.turnplate:before{width:2.72rem;height:3.04rem;background:url(../images/christmas/old-man.png) 50%/cover;top:-1.12rem}.turnplate:after,.turnplate:before{content:'';position:absolute;z-index:3}.turnplate:after{width:2.85333rem;height:3.94667rem;background:url(../images/christmas/deer.png) 50%/cover;bottom:-1.04rem;right:-.53333rem}.turnplate .rotate{position:absolute;z-index:2;width:8.66667rem;height:8.66667rem;border-radius:50%;background:url(../images/christmas/rotate.png) 50%/cover;-webkit-transition:-webkit-transform 7s ease-out;transition:-webkit-transform 7s ease-out;transition:transform 7s ease-out;transition:transform 7s ease-out,-webkit-transform 7s ease-out}.turnplate .light{position:absolute;width:8.26667rem;height:8.26667rem;left:.2rem;top:.2rem;z-index:2}.turnplate .light.s-one{background:url(../images/christmas/light.png) 50%/cover}.turnplate .light.s-two{background:url(../images/christmas/light-two.png) 50%/cover}.turnplate .shadow{position:absolute;z-index:1;width:8.66667rem;height:8.66667rem;border-radius:50%;background:#940009;top:.08rem;left:1px}.turnplate .pointer{position:absolute;width:1.49333rem;height:3.06667rem;left:50%;top:50%;margin-left:-.74667rem;margin-top:-2.34667rem;background:url(../images/christmas/pointer.png) 50%/cover;z-index:4}.rule{height:3.01333rem;background:#fcfae7}.prize{height:26.64rem;background:#d5232a}