.cover {
  position: relative;

  &.order-1,
  &.order-2,
  &.order-3,
  &.order-4 {
    &::before {
      content: attr(data-order);
      position: absolute;
      top: 0;
      right: 6px;
      width: 18px;
      height: 28px;
      color: #fff;
      text-align: center;
      font-size: 16px;
      line-height: 28px;
      background: none no-repeat 0 0 / 18px 28px;
    }
  }

  &.order-1 {
    &::before {
      background-image: $oneImage;
    }
  }

  &.order-2 {
    &::before {
      background-image: $twoImage;
    }
  }

  &.order-3 {
    &::before {
      background-image: $threeImage;
    }
  }

  &.order-4 {
    &::before {
      color: #A5A5A5;
      background-image: $fourImage;
    }
  }
}