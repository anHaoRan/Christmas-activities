* {
    margin: 0px;
    padding: 0px;
}

.activity-body {
    background-color: #d92d32;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
}

.activity-header {
    height: 213px;
    background: url(../images/hrader.png) no-repeat center 0;
    background-size: 100%;
}

.activity {
    padding: 0px 0 20px 0;
    .section {
        background-color: #fae9d9;
        padding: 0px;
        margin: 0 20px;
        ~ .section {
            margin-top: 20px;
        }
    }
}

.section-header {
    padding: 17px 24px;
    font-size: 16px;
    color: #8d561c;
    background-color: #fbdbbb;
}

.section-main {
    padding: 0px 20px 10px;
    .top {
        font-size: 16px;
        color: rgba(#a96f1c, 0.5);
        padding: 14px 0;
        border-bottom: 1px solid #efcda7;
    }
    .cotent {
        color: #a96f1c;
        font-size: 16px;
        text-indent: 2em;
        padding: 10px 0px;
        line-height: 1.6;
        &::after {
            content: '';
            height: 30px;
            background: url(../images/icon2.png) no-repeat 100%;
            background-size: 16px;
            display: block;
        }
        &::before {
            content: '';
            background: url(../images/icon1.png) no-repeat 100%;
            background-position: 0px;
            background-size: 16px;
            height: 30px;
            display: block;
        }
    }
}
