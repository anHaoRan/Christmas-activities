@mixin showApo() {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

body {
    width: 375px;
    margin: 0 auto;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-appearance: none;
}

a:link {
    text-decoration: none;
}

a:visited {
    text-decoration: none;
}

a:hover {
    text-decoration: none;
}

a:active {
    text-decoration: none;
}

.top {
    height: 568px;
    background: url('../images/christmas/top_bg.jpg') 50%/cover;
    padding-top: 21px;
}

.header {
    width: 304px;
    height: 180px;
    background: url('../images/christmas/logo.png') 50%/cover;
    margin: 0 auto;
    h1 {
        display: none;
    }
}

.turnplate {
    width: 325px;
    height: 325px;
    margin: 0 auto;
    position: relative;
    margin-bottom: 38px;
    &::before {
        content: '';
        position: absolute;
        width: 102px;
        height: 114px;
        background: url('../images/christmas/old-man.png') 50%/cover;
        top: -42px;
        z-index: 3;
    }
    &::after {
        content: '';
        position: absolute;
        width: 107px;
        height: 148px;
        background: url('../images/christmas/deer.png') 50%/cover;
        bottom: -39px;
        right: -20px;
        z-index: 3;
    }
    .rotate {
        position: absolute;
        z-index: 2;
        width: 325px;
        height: 325px;
        border-radius: 50%;
        background: url('../images/christmas/rotate.png') 50%/cover;
        -webkit-transition: -webkit-transform 7s ease-out;
        transition: -webkit-transform 7s ease-out;
        transition: transform 7s ease-out;
        transition: transform 7s ease-out, -webkit-transform 7s ease-out;
    }
    .light {
        position: absolute;
        width: 310px;
        height: 310px;
        left: 7.5px;
        top: 7.5px;
        z-index: 2;
        &.s-one {
            background: url('../images/christmas/light.png') 50%/cover;
        }
        &.s-two {
            background: url('../images/christmas/light-two.png') 50%/cover;
        }
    }
    .shadow {
        position: absolute;
        z-index: 1;
        width: 325px;
        height: 325px;
        border-radius: 50%;
        background: #940009;
        top: 3px;
        left: 1px;
    }
    .pointer {
        position: absolute;
        width: 56px;
        height: 115px;
        left: 50%;
        top: 50%;
        margin-left: -28px;
        margin-top: -88px;
        background: url('../images/christmas/pointer.png') 50%/cover;
        z-index: 5;
    }
}

.rule {
    height: 113px;
    background: #fcfae7;
}

.prize {
    height: 999px;
    background: #d5232a;
}

//  弹窗样式
.yellow {
    color: #fbee26;
}

.brownness {
    color: #aa151e;
}

.box {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    position: fixed;
    z-index: 10;
    top: 0px;
    font-size: 14px;
    .popup {
        width: 332px;
        min-height: 556px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -166px;
        margin-top: -300px;
        transform:scale(0.85,0.85);
        &.material{
          .main .shade-img{
            height: 174px;
          }
        }
        .header {
            width: 293px;
            margin-left: 13px;
            margin-right: 26px;
            height: 138px;
            background: url('../images/christmas/popup-header.png') 0 0 no-repeat;
            background-size: 100%;
            position: relative;
            z-index: 1;
        }
        .b {
            width: 272px;
            min-height: 438px;
            margin-top: -41px;
            margin-left: 30px;
            margin-right: 28px;
            padding-top: 39px;
            background: #ee2f2f;
            border-radius: 20px;
            border-bottom-left-radius: 80px;
            border-bottom-right-radius: 90px;
        }
        .main {
            width: 272px;
            float: left;
            .shade {
                background: url(../images/christmas/shade.jpg) 0 0 no-repeat;
                background-size: 100%;
            }
            .shade-img {
                width: 162px;
                height: 134px;
                margin: 0 auto;
                background-size: 100%;
                background-repeat: no-repeat;
                background-position: 0;
            }
            .lottery {
                width: 211px;
                margin: 0 auto;
                background: url('../images/christmas/lottery.png') 0 0 no-repeat;
                background-size: 100%;
                position: relative;
                text-align: center;
                padding-top: 46px;
                padding-bottom: 10px;
                .text {
                    line-height: 16px;
                    color: #fff;
                    font-size: 15px;
                }
            }
            .form-popup {
                width: 180px;
                margin: 0 auto;
                padding-top: 5px;
                position: relative;
                z-index: 1;
                input[type=text] {
                    width: 100%;
                    border: none;
                    outline: none;
                    border-radius: 20px;
                    height: 38px;
                    margin: 3px 0;
                    padding-left: 18px;
                    padding-right: 18px;
                    font-size: 14px;
                }
            }
        }
        .footer {
            width: 332px;
            height: 125px;
            background: url(../images/christmas/footer.png) 0 0 no-repeat;
            background-size: 100%;
            text-align: center;
            margin-left: -31px;
            margin-top: -20px;
            position: relative;
            // clear: both;
            float: left;
            .submit {
                width: 170px;
                height: 38px;
                background: #ee2f2f;
                color: #fff;
                border: none;
                font-size: 16px;
                border-radius: 20px;
                box-shadow: 0 3px 0px 0px #888;
                position: absolute;
                bottom: 30px;
                left: 50%;
                margin-left: -85px;
            }
        }
    }
    .box1 {
        width: 334px;
        min-height: 512px;
        float: left;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -256px;
        margin-left: -166px;
        background: url('../images/christmas/background.png') 50%/cover;
        background-repeat: no-repeat;
        padding-top: 124px;
        overflow: hidden;
        .box1-input-box {
            width: 100%;
            text-align: center;
            color: #fff;
            .cdkey {
                width: 100px;
                line-height: 36px;
                text-align: center;
                display: inline-block;
                border-radius: 20px;
                background: rgba(0, 0, 0, 0.3);
            }
        }
        .box1-input {
            width: 180px;
            height: 40px;
            border: none;
            color: #333;
            border-radius: 20px;
            padding-left: 20px;
            margin: 5px 0;
        }
        // .box1-header {
        //     height: 134px;
        // }
        .box1-main {
            // height: 226px;
        }
        .box1-img {
            width: 129px;
            height: 132px;
            margin: 0 auto;
            margin-bottom: 66px;
            background-size: 100%;
            background-repeat: no-repeat;
            background-position: 0;
        }
        .box1-tips {
            width: 170px;
            margin: 0 auto;
            color: #fff;
            text-indent: 6px;
        }
        .box1-footer {
            text-align: center;
        }
        .box1-button {
            width: 170px;
            height: 42px;
            border-radius: 20px;
            background-color: #ee2f2f;
            color: #fff;
            border: none;
            font-size: 16px;
            letter-spacing: 10px;
            box-shadow: 0 3px 0px #333333;
        }
    }
    .alert {
        width: 276px;
        height: 212px;
        background-color: #fff;
        border-radius: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -106px;
        margin-left: -138px;
        text-align: center;
        .close {
            font-style: normal;
            position: absolute;
            right: -8px;
            top: -8px;
            width: 26px;
            height: 26px;
            text-align: center;
            line-height: 23px;
            border: 1px solid #ccc;
            font-size: 18px;
            border-radius: 50%;
            cursor: pointer;
            color: #fff;
            background-color: #ccc;
        }
        .title-img {
            width: 120px;
            height: 96px;
            background: url('../images/christmas/title-img.png') 50%/cover;
            position: absolute;
            top: -52px;
            left: 50%;
            margin-left: -60px;
        }
        .mian-text {
            margin-top: 82px;
            text-align: center;
            font-size: 14px;
            line-height: 20px;
        }
        .topay {
            width: 102px;
            line-height: 40px;
            background-color: #ec2d33;
            color: #fff;
            display: inline-block;
            border-radius: 12px;
            text-align: center;
            margin-top: 20px;
            &.back {
                background-color: #fff;
                border: 1px solid #aa151e;
                color: #aa151e;
            }
        }
    }
}
