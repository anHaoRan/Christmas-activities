@import "common/variable";
@import "common/fun";

.search-box {
  width: 1000px;
  height: auto;
  margin: 0 auto 80px auto;
  overflow: hidden;
}

.no-result {
  background: bg('noData.png') no-repeat 50% 80px / 110px 110px;
  padding: 220px 0;
  text-align: center;
  color: #666;
}
/*搜索结果*/

.searchRect {
  width: 677px;
  height: auto;
  float: left;
  padding-top: 36px;
  h2.result-title {
    @include marPad();
    height: 26px;
    line-height: 26px;
    font-weight: 600;
    font-size: 26px;
    color: $textColor;
  }
  dl.result-list {
    height: 226px;
    width: 100%;
    border-bottom: 1px solid #e6e5e5;
    margin: 17px 0 2px 0;
  }
  dt {
    width: 145px;
    height: 205px;
    float: left;
    img {
      width: 100%;
      height: 100%;
    }
  }
  dd {
    @include marPad();
    width: 510px;
    height: 205px;
    float: right;
    .highlight{
      font-style: normal;
      color: #eb2c2c;
    }
    h3.bookName {
      @include marPad();
      @include showApo();
      height: 16px;
      line-height: 16px;
      font-size: 16px;
      color: $textColor;
      font-weight: 600;
    }
    span.author {
      @include showApo();
      display: block;
      height: 38px;
      line-height: 38px;
      font-size: 14px;
      color: #081426;
      padding-left: 2px;
      i {
        font-style: normal;
        color: #eb2c2c;
      }
    }
    p.intro {
      @include marPad();
      width: 100%;
      max-height: 84px;
      overflow: hidden;
      line-height: 21px;
      font-size: 14px;
      color: #666666;
      overflow: hidden;
      margin-bottom: 20px;
      i {
        font-style: normal;
        color: #eb2c2c;
      }
    }
    b.type {
      font-size: 14px;
      line-height: 14px;
      color: #666666;
      font-weight: 500;
    }
  }
}


/*精彩推荐*/

.recommend {
  width: 278px;
  height: 682px;
  float: right;
  padding-top: 28px;
  h2.recommend-title {
    @include marPad();
    height: 49px;
    font-size: 18px;
    font-weight: 600;
    color: $textColor;
    line-height: 49px;
  }
  div.recommend-rect {
    width: 100%;
    border: 1px solid #e6e5e5;
    padding-left: 21px;
    padding-bottom: 19px;
  }
  dl {
    width: 100%;
    height: 127px;
    margin-top: 19px;
  }
  dt {
    width: 89px;
    height: 127px;
    float: left;
    margin-right: 20px;
    img {
      width: 100%;
      height: 100%;
    }
  }
  dd {
    @include marPad();
    width: 138px;
    height: 100%;
    float: left;
    h3.bookName {
      @include marPad();
      @include showApo();
      height: 22px;
      line-height: 22px;
      font-size: 16px;
      color: #081426;
      font-weight: 600;
    }
    span.author {
      @include showApo();
      display: block;
      height: 26px;
      line-height: 26px;
      color: #081426;
      font-size: 14px;
      margin-bottom: 15px;
    }
    p.intro {
      @include marPad();
      width: 128px;
      max-height: 40px;
      overflow: hidden;
      line-height: 20px;
      font-size: 14px;
      color: #999999;
    }
  }
}
