body {
  &,
  &.normal {
    background: #ede9d5;
    .rightColumn ul li {
      border: 1px solid #faf8ed;
      &.active {
        border-color: #f9db4a;
        background: #fef2b8;
      }
      &.chapter-prev,
      &.chapter-next {
        background: transparent;
        border: 0 none;
      }
    }
  }
  &.green {
    background: #c6e4c6;
    .leftColumn {
      background: #f0fff2 !important;
    }
    .content .subject>.subject_main>._main_header {
      background: #f0fff2;
    }
    .subject_main {
      background: #f0fff2 !important;
    }
    .rightColumn {
      .clickShow {
        border-color: #fff;
        background: #9ac79a;
      }
    }
    .rightColumn>ul>li {
      color: #3d723d;
      background: #f0fff2;
      border: 1px solid #f0fff2;
      &.Catalog {
        &.active {
          color: #fff;
          span {
            background: bg('green_mulu.png') center no-repeat !important;
          }
        }
      }
      &.bookshelf {
        background: #f0fff2;
        color: #3d723d;
        border-color: #f0fff2;
        &.active {
          color: #fff;
          span {
            background: bg('click_book.png') center no-repeat !important;
          }
        }
      }
      &.Pattern {
        background: #f0fff2;
        color: #3d723d;
        border-color: #f0fff2;
        .switch-box {
          a {
            color: #3d723d;
          }
        }
        .switch-box {
          &.active {
            a {
              color: #fff;
            }
            span {
              background: bg('click_Pattern.png') center no-repeat !important;
            }
          }
        }
      }
      &.fontSizePlus,
      &.fontSizeMinus {
        &.active {
          color: #fff;
        }
      }
      &.chapter-prev,
      &.chapter-next {
        background: transparent;
        border: 0 none;
      }
      &.chapter-prev::after {
        background-position: 0 -40px;
      }
      &.chapter-next::after {
        background-position: 0 -60px;
      }
      &:nth-of-type(1)>span {
        background: bg('book_1.png') center no-repeat;
        background-size: 20px;
      }
      &:nth-of-type(2)>span {
        background: bg('A_Catalog-green.png') center no-repeat;
        background-size: 20px;
      }
      &.Pattern .switch-box >span {
        background: bg('green_moshi.png') center no-repeat;
      }
      &.active {
        border-color: #fff;
        background: #9ac79a;
      }
    }
  }
  &.black {
    color: #cbcccc !important;
    background: #9c9a9a;
    .leftColumn {
      background: #494949 !important;
    }
    .content .subject>.subject_main>._main_header {
      background: #494949 !important;
    }
    .content .subject>.subject_main>.paidRecharge>.paidRecharge_content>p:nth-of-type(1)>span {
      color: #fbb03b;
    }
    .subject_main {
      background: #494949 !important;
      .main_content>p {
        color: #cbcccc !important;
      }
    }
    .rightColumn .clickShow {
      border-color: #494949;
      background: #c4c3c3;
    }
    .rightColumn ul li {
      color: #cbcccc;
      background: #494949;
      border: 1px solid #494949;
      &.Catalog {
        &.active {
          border-color: #494949;
          background: #c4c3c3;
          color: #494949;
          span {
            background: bg('black_mulu.png') center no-repeat;
            background-size: 20px;
          }
        }
      }
      &.bookshelf {
        background: #494949;
        border-color: #494949 !important;
        &.active {
          border-color: #494949;
          background: #c4c3c3;
          color: #494949;
          span {
            background: bg('black_book.png') center no-repeat;
            background-size: 20px;
          }
        }
        span {
          background: bg('ccc_book') center no-repeat;
          background-size: 20px;
        }
      }
      &.Pattern {
        a {
          color: #cbcccc;
        }
        background: #494949;
        border-color: #494949 !important;
        &.active {
          background: #c4c3c3 !important;
          border-color: #494949 !important;
          a {
            color: #494949;
          }
        }
      }
      &.chapter-prev,
      &.chapter-next {
        background: transparent;
        border: 0 none;
      }
      &.chapter-prev::after {
        background-position: 0 -80px;
      }
      &.chapter-next::after {
        background-position: 0 -100px;
      }
      &:nth-of-type(1)>span {
        background: bg('A_bookshelf.png') center no-repeat;
        background-size: 20px;
      }
      &:nth-of-type(2)>span {
        background: bg('A_Catalog-black.png') center no-repeat;
        background-size: 20px;
      }
      &:nth-of-type(3)>span {
        background: bg('ccc_Pattern.png') center no-repeat;
      }
      &.active {
        border-color: #494949;
        background: #c4c3c3;
        color: #494949;
        a {
          color: #494949;
        }
      }
    }
  }
}
