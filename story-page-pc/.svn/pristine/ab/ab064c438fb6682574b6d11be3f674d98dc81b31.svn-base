@import "common/variable";
@import "common/fun";

.download-Box{
  margin: 0 auto;
  height: 804px;
  background: #8795ff;
  margin-top: -24px;
}
.download-main{
  position: relative;
  height: 758px;
  width: 1000px;
  margin: 0 auto;
  padding-top: 84px;
  .cloud{
    position: absolute;
    width: 215px;
    height: 64px;
    background: bg('cloud.png');
    background-repeat: no-repeat;
  }
  .cloud1{
    left: -130px;
    top: 120px;
  }
  .cloud2{
    left: 213px;
    top: 500px;
  }
  .iphone{
    position: relative;
    width: 279px;
    height: 571px;
    float: left;
    background: bg('iphone.png');
    img{
      position: absolute;
      left: 46px;
      top: 105px;
      width: 191px;
      height: 191px;
    }
  }
  .main-right{
    width: 600px;
    height: 571px;
    float: right;
    padding-top: 15px;
    h2.APPName{
      @include marPad();
      line-height: 82px;
      font-size: 50px;
      font-weight: bold;
      color: #fff;
    }
    p.info{
      @include marPad();
      line-height: 36px;
      font-size: 24px;
      color: #fff;
      margin-bottom: 23px;
    }
    dl.download-Rect{
      height: 214px;
      dt{
        height: 42px;
        line-height: 42px;
        font-size: 18px;
        color: #fff;
      }
      dd{
        @include marPad();
        float: left;
        ol{
          list-style: none;
          @include marPad();
        }
        li{
          line-height: 26px;
          font-size: 14px;
          color: #fff;
        }
      }
      dd.iphone-wayRect{
        width: 47%;
        border-right: 1px solid #d2d0d0;
      }
      dd.Android-wayRect{
        width: 53%;
        padding-left: 22px;
      }
      .wayName{
        @include marPad();
        height: 26px;
        line-height: 26px;
        color: #fff;
        padding-left: 30px;
        margin-bottom: 6px;
      }
      .iphone-wayName{
        background: bg('iphone-logo.png');
        background-repeat: no-repeat;
      }
      .Android-wayName{
        background: bg('Android-logo.png');
        background-repeat: no-repeat;
      }
      .download-btn{
        display: block;
        width: 182px;
        height: 39px;
        border: 1px solid #fff;
        border-radius: 27px;
        text-align: center;
        line-height: 39px;
        font-size: 18px;
        color: #fff;
        margin-top: 22px;
      }
    }
    .wapEntrance{
      margin-top: 63px;
      height: 76px;
      div.twoCode-Rect{
        float: right;
        width: 76px;
        height: 76px;
        border: 1px solid #ddd4c8;
        border-radius: 3px;
        img{
          display: block;
          width: 68px;
          height: 68px;
          margin: 0 auto;
          margin-top: 3px;
        }
      }
      p.sent{
        @include marPad();
        float: right;
        font-size: 14px;
        line-height: 22px;
        color: #fff;
        margin-top: 30px;
        text-align: right;
        margin-right: 13px;
      }
    }
  }
}
.wave-Box{
  height: 46px;
  background: bg('wave.png');
  background-repeat: repeat-x;
}