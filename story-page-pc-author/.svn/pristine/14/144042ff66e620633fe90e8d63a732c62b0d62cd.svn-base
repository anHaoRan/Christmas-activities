@import './fun';
@import './variable';
body,
html {
    width: 100%;
    height: 100%;
}

.popup {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    position: fixed;
    left: 0px;
    top: 0px;
    h3,
    p {
        margin: 0px;
        padding: 0px;
    }
    .popup-box {
        width: 696px;
        height: 368px;
        background-color: #fff;
        padding: 35px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -184px;
        margin-left: -348px;
        .popup-close{
            width: 25px;
            height: 25px;
            border-radius: 20px;
            background-color: #f3f3f3;
            display: block;
            float: right;
            margin-right: -46px;
            margin-top: -46px;
            background-image: bg('Close.png');
            background-size: 8px;
            background-repeat: no-repeat;
            background-position: center;
        }
    }
    .popup-body,
    .popup-title {
        padding-left: 20px;
    }
    .popup-title {
        line-height: 40px;
        background-color: #f6f6f6;
        border-top: 1px solid $borderColor;
        margin-bottom: 32px;
        font-size: 15px;
        color: #5a5a5a;
    }
    .popup-body {
        height: 190px;
        .popup-name {
            margin-right: 15px;
            line-height: 34px;
            display: inline-block;
            float: left;
        }
        .popup-v {
            width: 406px;
            height: 36px;
            float: left;
            margin-right: 160px;
            input[type=text]{
                
            }
        }
        .popup-t{
            float: left;
            margin-top:14px;
            margin-left: 46px;
            color: #b1b1b1;
        }
    }
    .popup-footer{
        text-align: right;
        .btn{
            padding: 0 28px;
        }
    }
}
