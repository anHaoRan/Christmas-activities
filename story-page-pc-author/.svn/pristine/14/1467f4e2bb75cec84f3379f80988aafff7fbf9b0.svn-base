.nav{
  float: left;
  width: 220px;
  min-height: 900px;
  background: #272f42;
  color: #fff;
  margin-right: 40px;
  h4{
    margin: 0;
    font-size: 18px;
    font-weight: normal;
    line-height: 60px;
    text-align: center;
    border-bottom: 1px solid #2e364a;
    margin-bottom: 80px;
  }
  ul{
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .item{
    position: relative;
    height: 40px;
    width: 160px;
    margin: 0 auto;
    margin-bottom: 20px;
    line-height: 40px;
    border-radius: 3px;
    a{
      display: inline-block;
      width: 100%;
      height: 100%;
      color: #4e5772;
      padding-left: 72px;
    }
    &:before{
      position: absolute;
      left: 30px;
      top: 9px;
      content: "";
      width: 22px;
      height: 23px;
      background-image: bg('column-icon.png');
      background-repeat: no-repeat;
    }
    &:nth-child(1){
      &:before{
        background-position: 0px 0px;
      }
    }
    &:nth-child(2){
      &:before{
        background-position: 0px -22px;
      }
    }
    &:nth-child(3){
      &:before{
        background-position: 0px -46px;
      }
    }
    &:nth-child(4){
      &:before{
        background-position: 0px -70px;
      }
    }
    &:nth-child(5){
      &:before{
        background-position: 0.5px -93px;
      }
    }

    &:hover,&.active {
      background-color: #343e54;
      a{
        color: #cfdbf8;
      }
      &:nth-child(1) {
        &:before {
          background-position: -22px 0px;
        }
      }
      &:nth-child(2) {
        &:before {
          background-position: -22px -22px;
        }
      }
      &:nth-child(3) {
        &:before {
          background-position: -22px -46px;
        }
      }
      &:nth-child(4) {
        &:before {
          background-position: -22px -70px;
        }
      }
      &:nth-child(5) {
        &:before {
          background-position: -22.5px -93px;
        }
      }

    }
  }
}