// 作品列表
@import 'common/fun';
.worksList {
    width: 1140px;
    height: auto;
}

.worksList-header {
    .hint {
        span {
            color: #abb1b7;
        }
        .num {
            font-style: normal;
            color: #7798b1;
            padding: 0 5px;
        }
    }
}

.wl-t {
    span {
        &:nth-child(1) {
            width: 286px;
        }
        &:nth-child(2) {
            width: 285px;
        }
        &:nth-child(3) {
            width: 158px;
        }
        &:nth-child(4) {
            width: 207px;
        }
        &:nth-child(5) {
            width: 204px;
        }
    }
}

.worksList-list {
    list-style: none;
    margin: 0;
    padding: 0;
    .item {
        height: 179px;
        border-bottom: 1px solid #eaeaea;
        padding: 30px 0;
        &>div {
            float: left;
            height: 100%;
            &:nth-child(1) {
                width: 286px;
            }
            &:nth-child(2) {
                width: 285px;
            }
            &:nth-child(3) {
                width: 158px;
            }
            &:nth-child(4) {
                width: 207px;
            }
            &:nth-child(5) {
                width: 204px;
            }
        }
    }
    .particulars {
        .cover {
            float: left;
            width: 90px;
            height: 118px;
            margin: 0 20px 0 10px;
            img {
                width: 100%;
                height: 100%;
            }
        }
        .bookname {
            float: left;
            margin: 0;
            height: 33px;
            line-height: 33px;
            overflow: hidden;
            width: 150px;
            font-style: 18px;
            font-family: "Hiragino Sans GB", "STHeiti", "微软雅黑", "Microsoft YaHei", SimHei, "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
        .sectionall {
            display: inline-block;
            width: 150px;
            float: left;
            line-height: 49px;
            font-style: 14px;
            color: #a5acb2;
        }
        .wordsnum {
            display: inline-block;
            width: 150px;
            float: left;
            line-height: 36px;
            font-style: 14px;
            color: #a5acb2;
        }
    }
    .newest {
        padding: 0 30px;
        .intro {
            margin: 0;
            line-height: 26px;
            font-style: 14px;
            overflow: hidden;
        }
        .time {
            float: left;
            line-height: 36px;
            font-style: 14px;
            color: #a5acb2;
        }
    }
    .collect {
        line-height: 118px;
        .num {
            display: inline-block;
            width: 100%;
            text-align: center;
        }
    }
    .state {
        text-align: center;
        &>span {
            display: inline-block;
        }
        .applying,
        .serial {
            line-height: 118px;
            width: 100%;
            text-align: center;
        }
        .applying {
            color: #499fff;
        }
        .serial {
            color: #06b527;
        }
        .state-btn {
            margin-top: 42px;
        }
        .error {
            color: #ff3c36;
            line-height: 36px;
            font-style: 14px;
            margin-top: 9px;
        }
        .error-msg {
            color: #c3c6c8;
            line-height: 28px;
            padding: 0 5px;
            max-height: 56px;
            overflow: hidden;
        }
    }
    .operation {
        padding-left: 35px;
        a {
            display: inline-block;
            float: left;
            line-height: 32px;
            width: 80px;
            color: #7798b1;
            font-style: 14px;
            margin-bottom: 11px;
        }
    }
}