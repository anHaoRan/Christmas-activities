@import 'common/fun';
.setroll{
  width: 833px;
  height: auto;
}
.addbtn-box{
  overflow: hidden;
  margin: 30px 0 17px 0;
}
.sr-t{
  span{
    &:nth-child(1){
      width: 84px;
    }
    &:nth-child(2){
      width: 333px;
    }
    &:nth-child(3){
      width: 127px;
    }
    &:nth-child(4){
      width: 127px;
    }
    &:nth-child(5){
      width: 160px;
    }
  }
}
.setroll-list{
  list-style: none;
  margin: 0;
  padding: 0;
  li{
    height: 35px;
    border-bottom: 1px dotted #cbcbcb;
    .data-title{
      position: absolute;
      left: 50%;
      top: 100%;
      transform: translateX(-50%);
      background: rgba(0, 0, 0, .5);
      color: #fff;
      border-radius: 3px;
      z-index: 1;
      padding: 0 10px;
      white-space: nowrap; 
      display: none;
      line-height: 24px;
    }
    .text{
      display: inline-block;
      width: 100%;
      height: 100%;
      @include showApo();
    }
    &>span{
      display: inline-block;
      float: left;
      text-align: center;
      line-height: 35px;
      height: 35px;
      position: relative;
      cursor: pointer;
      &:hover{
        .data-title{
          display: block;
        }
      }
      &.num{
        width: 84px;
      }
      &.rollname{
        width: 333px;
      }
      &.sectionnum{
        width: 127px;
      }
      &.wordsnum{
        width: 127px;
      }
      &.operate{
        width: 160px;
        a{
          display: inline-block;
          float: left;
          width: 80px;
          text-align: center;
          &.amend{
            color: #499fff;
          }
          &.del{
            color: #ff3a3a;
          }
        }
      }
    }
  }
}