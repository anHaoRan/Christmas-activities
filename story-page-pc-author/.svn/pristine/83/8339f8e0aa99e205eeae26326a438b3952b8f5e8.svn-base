@import 'common/fun';
.issue{
  width: 1070px;
  height: auto;
}
.i-t{
  margin-top: 36px;
  span{
    &:nth-child(1){
      width: 84px;
    }
    &:nth-child(2){
      width: 86px;
    }
    &:nth-child(3){
      width: 247px;
    }
    &:nth-child(4){
      width: 86px;
    }
    &:nth-child(5){
      width: 167px;
    }
    &:nth-child(6){
      width: 167px;
    }
    &:nth-child(7){
      width: 86px;
    }
    &:nth-child(8){
      width: 147px;
    }
  }
}
.issue-list{
  list-style: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  li{
    height: 35px;
    border-bottom: 1px dotted #cbcbcb;
    &>span{
      display: inline-block;
      float: left;
      text-align: center;
      line-height: 35px;
      &.num{
        width: 84px;
      }
      &.rollname{
        width: 86px;
      }
      &.title{
        width: 247px;
        text-align: left;
        padding-left: 77px;
        position: relative;
        &.top{
          &::before{
            position: absolute;
            left: 35px;
            top: 0;
            content: '【顶】';
            color: red;
          }
        }
      }
      &.wordsnum{
        width: 86px;
      }
      &.time{
        width: 167px;
      }
      &.newtime{
        width: 167px;
      }
      &.subscription{
        width: 81px;
      }
      &.operate{
        width: 148px;
        padding-left: 10px;
        a{
          display: inline-block;
          float: left;
          padding: 0 7px;
          text-align: center;
          color: #499fff;
        }
      }
    }
  }
}


.popup{
  .popup-body{
    padding: 0;
    .label{
      padding: 0;
      width: 110px;
      text-align: right;
      line-height: 34px;
      padding-right: 3px;
    }
    &>div{
      overflow: hidden;
    }
    .num, .title{
      line-height: 34px;
    }
    .select-box{

    }
    .roll-box{
      float: left;
      position: relative;
      width: 117px;
      height: 34px;
      border: 1px solid #e1e1e1;
      border-radius: 3px;
      overflow: hidden;
      margin-right: 14px;
      &::after{
        position: absolute;
        right: 13px;
        top: 16px;
        content: '';
        width: 10px;
        height: 5px;
        background-image: bg('read-arrow.png');
        background-size: 10px auto;
        background-position: 0 -5px;
        z-index: 3px;
      }
      .form-group{
        width: 114px;
        height: 32px;
        border: none;
        margin: 0px;
      }
    }
    .section-box{
      float: left;
      position: relative;
      width: 385px;
      height: 34px;
      border: 1px solid #e1e1e1;
      border-radius: 3px;
      overflow: hidden;
      &::after{
        position: absolute;
        right: 13px;
        top: 16px;
        content: '';
        width: 10px;
        height: 5px;
        background-image: bg('read-arrow.png');
        background-size: 10px auto;
        background-position: 0 -5px;
        z-index: 3px;
      }
      .form-group{
        width: 383px;
        height: 32px;
        border: none;
        margin: 0px;
      }
    }
    .hint{
      float: left;
      margin-left: 110px;
      color: #a5a5a5;
      line-height: 20px;
      margin-top: 15px;
    }
  }
}