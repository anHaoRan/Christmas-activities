@import 'common/variable';
@import 'common/fun';
.content {
    width: 1140px;
}

p {
    margin: 0px;
}

.user {
    .user-top {
        overflow: hidden;
    }
    .user-item {
        min-width: 244px;
        line-height: 58px;
        float: left;
        p {
            margin: 0px;
        }
    }
    .one {
        margin-left: 38px;
        width: 266px;
    }
    .two {
        width: 301px;
    }
}

.user-main {
    overflow: hidden;
    .textarea-box {
        height: 66px;
        width: 724px;
        border: 1px solid #e1e1e1;
        margin-left: 160px;
        border-radius: 5px;
        position: relative;
        padding: 2px;
        &.has-value {
            &::before {
                display: none;
            }
        }
        &::before {
            content: attr(data-placeholder);
            position: absolute;
            height: 66px;
            width: 100%;
            top: 0;
            left: 4px;
            padding: 10px 13px;
            color: #aaa;
        }
    }
    .button {
        margin-left: 198px;
        margin-top: 20px;
        padding: 0 28px;
        margin-bottom: 40px;
    }
    .describe {
        width: 718px;
        height: 62px;
        padding: 0px;
        outline: none;
        resize: none;
        border: none;
        float: left;
        padding: 10px 13px;
        position: absolute;
        z-index: 2;
        background: rgba(0, 0, 0, 0);
    }
    .prompt {
        display: inline-block;
        float: left;
        color: #ff3a3a;
        position: absolute;
        right: -130px;
        bottom: 16px;
    }
    .user-pic {
        padding-left: 38px;
        margin-top: 18px;
        .pic-img {
            width: 96px;
            height: 96px;
            border-radius: 50px;
            background-image: bg('init-tx.jpg');
            background-repeat: no-repeat;
            background-position: -13px -1px;
            background-size: 120px;
            margin-left: 167px;
        }
        .pic-text {
            line-height: 104px;
            float: left;
            margin-left: 69px;
        }
        .btn-file {
            float: left;
            line-height: 34px;
            font-size: 14px;
            color: #fff;
            width: 100px;
            display: block;
            border: none;
            margin-left: 16px;
            margin-top: -10px;
            height: 34px;
            text-align: center;
            border-radius: 5px;
            background: #4a9bff;
            position: relative;
            .file {
                width: 100%;
                height: 100%;
                position: absolute;
                top: 0px;
                left: 0px;
                opacity: 0;
                cursor: pointer;
            }
        }
    }
    .user-describe {
        padding-left: 38px;
        margin-top: 40px;
        .pic-text {
            line-height: 69px;
            float: left;
            margin-left: 69px;
        }
    }
    .works-describe {
        padding-left: 38px;
        margin-top: 20px;
        .works-text {
            margin-top: 10px;
            display: block;
            float: left;
            margin-right: -12px;
        }
    }
}

.matter-main {
    height: 318px;
    margin: 26px 0 80px 0;
    .form-box {
        overflow: hidden;
        margin-bottom: 32px;
        .form-control {
            padding: 0px;
            width: 324px;
            position: relative;
            float: left;
            &.has-value {
                &::before {
                    display: none;
                }
            }
            &::before {
                content: attr(data-placeholder);
                position: absolute;
                line-height: 40px;
                width: 100%;
                top: 0;
                left:0;
                padding-left: 26px;
                color: #aaa;
            }
        }
        .search-user{
            float: left;
            margin-left: 20px;
            height: 40px;
            line-height: 40px;
        }
    }
    .icon-userName {
        width: 88px;
        height: 32px;
        margin-top: 8px;
        float: left;
        text-align: right;
        margin-right: 26px;
    }
    .form-control input[type='text'],
    .form-control input[type='password'] {
        width: 326px;
        height: 40px;
        border-radius: 4px;
        border: 1px solid #aaaaaa;
        text-indent: 24px;
        position: relative;
        z-index: 2;
        //background: rgba(0, 0, 0, 0);
    }
    .botton {
        padding: 0 28px;
        margin-left: 116px;
        margin-top: 30px;
    }
}

.box-login {
    .s {
        line-height: 44px;
        float: left;
        margin-right: 30px;
    }
    .item {
        width: 33px;
        height: 44px;
        display: inline-block;
        color: #c1c1c1;
        .i {
            font-style: normal;
            width: 31px;
            display: block;
            height: 26px;
            vertical-align: middle;
            background: bg('box-login.png') no-repeat 0 0;
            background-repeat: no-repeat;
            @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 2dppx), (min-resolution: 192dpi) {
                background-image: bg('box-login@2x.png');
                background-size: 31px;
            }
        }
        .text {
            font-style: normal;
            text-align: center;
            display: block;
        }
        &:nth-of-type(1) {
            margin-right: 54px;
            .i {
                background-position: 0px 1px;
            }
        }
        &:nth-of-type(2) {
            margin-right: 44px;
            .i {
                background-position: 0px -25px;
            }
        }
        &:nth-of-type(3) {
            .i {
                background-position: 0px -50px;
            }
        }
    }
}

// 第一次注册填写个人信息。
.fill-information {
    .right-header {
        margin-bottom: 34px;
    }
}

.form-horizontal {
    overflow: hidden;
    .form-group {
        width: 388px;
        height: 40px;
        border: none;
        margin-bottom: 34px;
        .icon {
            &:after {
                height: 23px;
            }
        }
        &:nth-of-type(1) {
            .icon {
                &:after {
                    background-position: 0px 0px;
                }
            }
        }
        &:nth-of-type(2) {
            .icon {
                &:after {
                    width: 27px;
                    height: 25px;
                    right: 24px;
                    background-position: 1px -70px;
                }
            }
        }
        &:nth-of-type(3) {
            .icon {
                &:after {
                    width: 25px;
                    background-position: 0px -148px;
                    right: 28px;
                }
            }
        }
        &:nth-of-type(4) {
            .icon {
                &:after {
                    width: 26px;
                    background-position: 0px -171px;
                    right: 24px;
                }
            }
        }
        &:nth-of-type(5) {
            .icon {
                &:after {
                    background-position: 2px -194px;
                }
            }
        }
        &:nth-of-type(6) {
            .icon {
                &:after {
                    height: 20px;
                    width: 24px;
                    right: 28px;
                    background-position: 0px -217px;
                }
            }
        }
        &:nth-of-type(7) {
            .icon {
                &:after {
                    height: 20px;
                    width: 24px;
                    right: 28px;
                    background-position: 0px -236px;
                }
            }
        }
        &:nth-of-type(8) {
            .icon {
                &:after {
                    height: 20px;
                    width: 24px;
                    right: 28px;
                    background-position: 0px -255px;
                }
            }
        }
        &:nth-of-type(9) {
            .icon {
                &:after {
                    height: 23px;
                    width: 24px;
                    right: 28px;
                    background-position: 0px -274px;
                }
            }
        }
        &:nth-of-type(10) {
            .icon {
                &:after {
                    height: 18px;
                    width: 24px;
                    right: 28px;
                    top: 12px;
                    background-position: 0px -296px;
                }
            }
        }
    }
    input[type=text] {
        margin: 0px;
        padding: 0px;
        width: 326px;
        height: 38px;
        border-radius: 50px;
        border: 1px solid #aaa;
        text-indent: 22px;
        color: #333;
    }
    .error {
        input[type=text] {
            border-color: #f50e0e;
        }
    }
    .disabled {
        input[type=text] {
            background-color: #d7d7d7;
            color: #333333;
        }
    }
    .icon {
        width: 62px;
        height: 40px;
        float: left;
        position: relative;
        &:after {
            position: absolute;
            content: "";
            width: 20px;
            height: 22px;
            right: 30px;
            top: 8px;
            background: bg('author.png') no-repeat;
            @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 2dppx), (min-resolution: 192dpi) {
                background-image: bg('author@2x.png');
                background-size: 26px;
            }
        }
    }
    .box {
        width: 326px;
        margin-left: 62px;
        position: relative;
        &::before {
            position: absolute;
            content: attr(data-placeholder);
            width: 100%;
            height: 38px;
            line-height: 38px;
            padding-left: 25px;
            color: #aaa;
        }
        &.has-value {
            &::before {
                display: none;
            }
        }
        .form-control {
            padding: 0px;
            position: relative;
            &::before {
                content: attr(data-placeholder);
                position: absolute;
                line-height: 40px;
                width: 100%;
                top: 0;
                left: 0;
                padding-left: 25px;
                color: #aaa;
            }
            textarea {
                position: relative;
                z-index: 1;
                width: 100%;
                height: 105px;
                padding: 9px 20px 5px;
                border: 1px solid #aaa;
                color: inherit;
                //background-color: rgba(0, 0, 0, 0);
                border-radius: 4px;
                resize: none;
            }
        }
    }
}

.select-like {
    background: url(../images/select-like.png) no-repeat 289px 50%/22px 22px;
}

.form {
    width: 876px;
}

.submit {
    line-height: 34px;
    font-size: 14px;
    color: #fff;
    width: 100px;
    display: block;
    border: none;
    height: 34px;
    text-align: center;
    margin: 12px auto 12px;
    border-radius: 5px;
    cursor: pointer;
    background: #4a9bff;
}



.search-result{
    overflow: hidden;
    ul{
        list-style: none;
        margin: 0;
        padding: 0;
    }
    li{
        position: relative;
        float: left;
        width: 200px;
        height: 50px;
        margin: 0 10px 10px 0;
        border: 1px solid #e1e1e1;
        cursor: pointer;
        border-radius: 4px;
        overflow: hidden;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        //font-family: "Hiragino Sans GB", "STHeiti", "微软雅黑", "Microsoft YaHei", SimHei, "Helvetica Neue", Helvetica, Arial, sans-serif;
        &.active{
            border-color: red;
            &::after{
                position: absolute;
                content: '';
                right: 0;
                bottom: 0;
                width: 26px;
                height: 27px;
                background-image: bg('checked-red.png');
                background-repeat: no-repeat;
            }
        }
    }
    .user-cover{
        width: 40px;
        height: 40px;
        float: left;
        border-radius: 50%;
        overflow: hidden;
        margin: 5px 10px 0 5px;
        img{
            width: 100%;
            height: 100%;
        }
    }
    .user-name,
    .user-phone{
        display: inline-block;
        float: left;
        width: 140px;
        font-size: 14px;
        line-height: 18px;

    }
    .user-name{
        margin-top: 7px;
    }
}

.info-box{
    padding: 30px 0 100px 70px;
    p{
        line-height: 34px;
        font-size: 16px;
        span{
            font-weight: 600;
        }
    }
    .info-btn{
        margin-top: 50px;
        margin-left: 40px;
    }
}