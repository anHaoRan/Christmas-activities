.form-group {
    width: 214px;
    height: 36px;
    border-radius: 3px;
    border: 1px solid #aaa;
    color: #a5acb2;
    overflow: hidden;
    margin-left: 10px;
    float: left;
    margin-right: 12px;
    .form-control {
        position: relative;
        padding-left: 14px;
        &.has-value {
            &::before {
                display: none;
            }
        }
    }
    .form-control:before {
        content: attr(data-placeholder);
        position: absolute;
        line-height: 34px;
        width: 100%;
        top: 0;
        left: 0;
        padding-left: 14px;
        color: #aaa;
    }
    input[type=text] {
        position: relative;
        z-index: 1;
        width: 100%;
        height: 34px;
        border: none;
        color: inherit;
        background-color: transparent;
    }
    .select-model {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 34px;
        z-index: 3;
        border: 0 none;
        opacity: 0;
        cursor: pointer;
        text-indent: 14px;
    }
}
