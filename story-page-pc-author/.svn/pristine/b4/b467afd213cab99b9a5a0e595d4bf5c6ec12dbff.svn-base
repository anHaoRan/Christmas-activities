@import 'common/fun';
.issue{
  width: 1070px;
  height: auto;
}
.i-t{
  margin-top: 36px;
  span{
    &:nth-child(1){
      width: 84px;
    }
    &:nth-child(2){
      width: 86px;
    }
    &:nth-child(3){
      width: 247px;
    }
    &:nth-child(4){
      width: 86px;
    }
    &:nth-child(5){
      width: 167px;
    }
    &:nth-child(6){
      width: 167px;
    }
    &:nth-child(7){
      width: 86px;
    }
    &:nth-child(8){
      width: 147px;
    }
  }
}
.issue-list{
  list-style: none;
  margin: 0;
  padding: 0;
  li{
    height: 35px;
    border-bottom: 1px dotted #cbcbcb;
    &>span{
      display: inline-block;
      float: left;
      text-align: center;
      line-height: 35px;
      &.num{
        width: 84px;
      }
      &.rollname{
        width: 86px;
      }
      &.title{
        width: 247px;
        text-align: left;
        padding-left: 77px;
        position: relative;
        &.top{
          &::before{
            position: absolute;
            left: 35px;
            top: 0;
            content: '【顶】';
            color: red;
          }
        }
      }
      &.wordsnum{
        width: 86px;
      }
      &.time{
        width: 167px;
      }
      &.newtime{
        width: 167px;
      }
      &.subscription{
        width: 81px;
      }
      &.operate{
        width: 147px;
        padding-left: 10px;
        a{
          display: inline-block;
          float: left;
          padding: 0 7px;
          text-align: center;
          color: #499fff;
        }
      }
    }
  }
}
.paging{
  list-style: none;
  width: 300px;
  margin: 0 auto;
  margin-top: 20px;
  li{
    float: left;
    width: 30px;
    height: 30px;
    cursor: pointer;
  }
}