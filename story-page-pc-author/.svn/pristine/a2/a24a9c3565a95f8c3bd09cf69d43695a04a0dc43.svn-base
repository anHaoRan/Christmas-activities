.fl {
    float: left;
}

.fr {
    float: right;
}

.hide {
    display: none;
}

.show {
    display: block;
}

//公共按钮
.btn {
    display: inline-block;
    line-height: 34px;
    font-size: 14px;
    color: #fff;
    padding: 0 15px;
    border-radius: 5px;
    background: #4a9bff;
    border-width: 0;
    cursor: pointer;
}

//公共title
//禁用按钮
.disabled-btn {
    display: inline-block;
    line-height: 34px;
    font-size: 14px;
    color: #fff;
    padding: 0 15px;
    border-radius: 5px;
    background: #cbcbcb;
    border-width: 0;
    cursor: pointer;
}

//公共列表title
.list-title {
    height: 32px;
    background: #f6f6f6;
    border-top: 1px solid #eaeaea;
    padding: 4px 0;
    line-height: 24px;
    font-style: 14px;
    color: #a5acb2;
    span {
        display: block;
        float: left;
        text-align: center;
        border-right: 1px solid #eaeaea;
        &:last-child {
            border: 0;
        }
    }
}

// 公共的时间选择
.filter {
    height: 34px;
    padding-left: 15px;
    color: #26282e;
    .book-name {
        width: 214px;
        height: 34px;
        border-radius: 3px;
        color: #a5acb2;
        text-indent: 14px;
    }
    .time {
        width: 140px;
        line-height: 34px;
        display: inline-block;
        border-radius: 3px;
        font-size: 14px;
        color: #a5acb2;
        background: #fff;
        position: relative;
        margin: 0 12px;
        input[type=text] {
            width: 100%;
            height: 34px;
            border: none;
            border-radius: 3px;
            text-indent: 14px;
        }
        &:after {
            content: "";
            position: absolute;
            right: 16px;
            top: 6px;
            width: 18px;
            height: 18px;
            background-image: bg('calendar.png');
            background-repeat: no-repeat;
        }
    }
}

// 边框
.border {
    border: 1px solid #aaa;
}

//右边头部  不带返回
.right-header {
    height: 54px;
    padding-top: 10px;
    margin-top: 6px;
    .hint {
        float: left;
        margin: 0;
        line-height: 34px;
    }
}

//右边头部  带返回
.right-header-haveback {
    height: 54px;
    padding-top: 10px;
    margin-top: 6px;
    .hint {
        float: left;
        margin: 0;
        line-height: 34px;
    }
    .back {
        position: relative;
        display: inline-block;
        padding-right: 30px;
        color: #a5acb2;
        &::after {
            position: absolute;
            right: 11px;
            top: 11px;
            content: '';
            width: 7px;
            height: 12px;
            margin-left: 11px;
            background-image: bg('q-arrow.png');
            background-repeat: no-repeat;
            background-size: 7px auto;
            background-position: 0 -12px;
        }
    }
}

// 右侧盒子
.content {
    width: 820px;
    &:after {
        content: "";
        display: block;
        height: 0;
        clear: both;
        visibility: hidden;
    }
}

.right-boder {
    border-bottom: 1px solid #eaeaea;
}

// 公共title
.right-header {
    height: 54px;
    padding-top: 10px;
    .hint {
        float: left;
        margin: 0;
        line-height: 34px;
    }
}

.x {
    float: left;
    margin-top: 8px;
}

.form-group {
    width: 214px;
    height: 36px;
    border-radius: 3px;
    border: 1px solid #aaa;
    color: #a5acb2;
    overflow: hidden;
    margin-left: 10px;
    float: left;
    margin-right: 12px;
    position: relative;
    .form-control {
        position: relative;
        padding-left: 14px;
        &.has-value {
            &::before {
                display: none;
            }
        }
    }
    .form-control:before {
        content: attr(data-placeholder);
        position: absolute;
        line-height: 34px;
        width: 100%;
        top: 0;
        left: 0;
        padding-left: 14px;
        color: #aaa;
    }
    input[type=text] {
        position: relative;
        z-index: 1;
        width: 100%;
        height: 34px;
        border: none;
        color: inherit;
        background-color: transparent;
    }
    .select-model {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 34px;
        z-index: 3;
        border: 0 none;
        opacity: 0;
        cursor: pointer;
        text-indent: 14px;
    }
}

//右边导航
// 分卷设置 && 写新章节...
.main-nav {
    height: 39px;
    background: #f6f6f6;
    border-top: 1px solid #eaeaea;
    a {
        float: left;
        display: inline-block;
        height: 38px;
        line-height: 38px;
        padding: 0 20px;
        &.active,
        &:hover {
            border-bottom: 3px solid #4a9bff;
        }
    }
}

//加星提示
.label {
    display: inline-block;
    float: left;
    width: 126px;
    line-height: 36px;
    padding-left: 26px;
}

.label.must {
    padding-left: 0;
    &::before {
        content: '*';
        color: red;
        padding: 0 10px;
    }
}

//查询无结果
.no-result {
    background: url(../images/noData.png) no-repeat 50% 80px/82px 82px;
    padding: 180px 0;
    text-align: center;
    user-select: none;
}

//分页
.paging {
    padding: 20px 0px;
    overflow: hidden;
    .paging-list {
        width: 220px;
        height: 24px;
        margin: 0 auto;
        list-style: none;
        padding: 0px;
        .paging-left {
            width: 37px;
            height: 24px;
            float: left;
            cursor: pointer;
            &:before {
                width: 20px;
                height: 20px;
                display: block;
                margin-top: 3px;
                content: "";
                background: bg('paging-icon.png') no-repeat;
                background-size: 40px;
                background-position: 0px -20px;
            }
            &:hover {
                &:before {
                    background-position: -20px -20px;
                }
            }
        }
        .paging-right {
            width: 37px;
            height: 24px;
            float: left;
            cursor: pointer;
            &:before {
                width: 20px;
                height: 20px;
                display: block;
                margin-top: 3px;
                content: "";
                background: bg('paging-icon.png') no-repeat;
                background-size: 40px;
                background-position: 0px 0px;
            }
            &:hover {
                &:before {
                    background-position: -20px 0px;
                }
            }
        }
        .paging-item {
            width: 24px;
            height: 24px;
            float: left;
            border-radius: 20px;
            text-align: center;
            line-height: 24px;
            margin-right: 12px;
            color: #333333;
            cursor: pointer;
            &:hover,
            &.active {
                background: #eaeaea;
            }
        }
    }
}

//表单错误样式
.error input[type=password],
.error input[type=text],
.error textarea {
    border-color: #f50e0e!important;
}

//遮罩
.mask {
    z-index: 100;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    overflow: scroll;
}

//预览
.preview-box {
    position: relative;
    margin: 100px auto;
    width: 1000px;
    height: 935px;
    background: #ffffff;
    z-index: 999;
    padding: 35px 33px 33px 33px;
    .close {
        position: absolute;
        right: -12px;
        top: -12px;
        width: 25px;
        height: 25px;
        border-radius: 50%;
        background: #f3f3f3 bg('Close.png') 50%/10px no-repeat;
        cursor: pointer;
    }
    .preview-header {
        height: 41px;
        border-top: 1px solid #eaeaea;
        background: #f6f6f6;
        margin-bottom: 17px;
        .pc-btn,
        .phone-btn {
            display: block;
            float: left;
            width: 40px;
            height: 40px;
            cursor: pointer;
            &::after {
                content: '';
                display: block;
                margin: 0 auto;
                margin: 5px auto 0 5px;
                width: 30px;
                height: 30px;
                background-image: bg('popup-icon.png');
                background-repeat: no-repeat;
                background-size: 64px;
            }
        }
        .pc-btn {
            &::after {
                background-position: -32px -32px;
            }
            &:hover {
                &::after {
                    background-position: -32px 0px;
                }
            }
        }
        .phone-btn {
            &::after {
                background-position: 0 -32px;
            }
            &:hover {
                &::after {
                    background-position: 0 0;
                }
            }
        }
    }
    h4 {
        font-size: 18px;
        line-height: 44px;
        margin: 0;
        text-align: center;
    }
    .preview-content {
        height: 768px;
        border: 1px solid #e8e8e8;
        border-radius: 3px;
        padding: 20px 15px 20px 15px;
        p {
            text-indent: 2em;
            font-size: 16px;
            line-height: 1.6;
            color: #333333;
            word-break: break-all;
            white-space: pre-wrap;
        }
    }
}

