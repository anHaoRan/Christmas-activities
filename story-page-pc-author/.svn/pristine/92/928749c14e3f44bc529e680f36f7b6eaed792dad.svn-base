@import 'common/fun';
.estWorks{
  width: 1005px;
  height: auto;
  .right-header-haveback{
    border-bottom: 1px solid #e1e1e1;
    margin-bottom: 25px;
  }
}

.estWorks-main{
  width: 836px;
  &>div{
    overflow: hidden;
    margin-bottom: 25px;
  }
  .works-name{
    .bookname{
      width: 707px;
      height: 36px;
      overflow: hidden;
    }
    input[type=text]{
      
    }
  }
  .works-cover{
    .cover{
      width: 100px;
      height: 130px;
      float: left;
      border: 1px solid #e1e1e1;
      border-radius: 3px;
      position: relative;
      overflow: hidden;
      img{
        width: 100%;
        height: 100%;
      }
      .uploading-btn{
        position: absolute;
        bottom: 0;
        left: 0;
        height: 26px;
        width: 100px;
        line-height: 26px;
        color: #fff;
        background: #499fff;
        text-align: center;
        cursor: pointer;
        input[type=file]{
          position: absolute;
          left: 0;
          top:0;
          width: 100%;
          height: 100%;
          opacity: 0;
          cursor: pointer;
        }
      }
    }
    .mag{
      float: left;
      color: #c7cacb;
      line-height: 20px;
      margin: 39px 0 0 30px;
    }
  }
  .works-chan{
    
  }
  .works-type{
    
  }
  .works-intro{
    .intro{
      width: 707px;
      height: 176px;
      overflow: hidden;
      &::before{
        top: 5px;
      }
    }
    textarea{
      border: 1px solid #e1e1e1;
      border-radius: 3px;
      width: 100%;
      height: 100%;
      resize: none;
      padding: 5px 10px;
      line-height: 36px;
    }
    .num{
      line-height: 42px;
      color: #c7cacb;
    }
  }
  .works-tag{
    .label{
      position: relative;
      span{
        position: absolute;
        left: 0;
        top: 36px;
        line-height: 16px;
        color: #a5acb2;
      }
    }
    .tag-list{
      border: 1px solid #e1e1e1;
      border-radius: 3px;
      overflow: hidden;
      padding: 17px 0 6px 17px;
      span{
        float: left;
        margin: 0 7px 11px 0;
        line-height: 25px;
        padding: 0 10px;
        border: 1px solid #a5a5a5;
        border-radius: 27px;
        color: #a5a5a5;
        cursor: pointer;
        &.active{
          color: #ff3a3a;
          border-color: #ff3a3a;
        }
      }
    }
  }
  .works-est{
    .label{
      height: 36px;
    }
  }
}