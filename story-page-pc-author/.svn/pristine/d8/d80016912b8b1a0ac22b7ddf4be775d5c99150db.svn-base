// 作品列表
@import 'common/fun';
.worksList {
    width: 1140px;
    height: auto;
}

.worksList-header {
    .hint {
        span {
            color: #abb1b7;
        }
        .num {
            font-style: normal;
            color: #7798b1;
            padding: 0 5px;
        }
    }
}

.wl-t {
    span {
        &:nth-child(1) {
            width: 286px;
        }
        &:nth-child(2) {
            width: 285px;
        }
        &:nth-child(3) {
            width: 158px;
        }
        &:nth-child(4) {
            width: 207px;
        }
        &:nth-child(5) {
            width: 204px;
        }
    }
}

.worksList-list {
    list-style: none;
    margin: 0;
    padding: 0;
    .item {
        height: 179px;
        border-bottom: 1px solid #eaeaea;
        padding: 30px 0;
        &>div {
            float: left;
            height: 100%;
            &:nth-child(1) {
                width: 286px;
            }
            &:nth-child(2) {
                width: 285px;
            }
            &:nth-child(3) {
                width: 158px;
            }
            &:nth-child(4) {
                width: 207px;
            }
            &:nth-child(5) {
                width: 204px;
            }
        }
    }
    .particulars {
        .cover {
            float: left;
            width: 90px;
            height: 118px;
            margin: 0 20px 0 10px;
            img {
                width: 100%;
                height: 100%;
            }
        }
        .bookname {
            float: left;
            margin: 0;
            height: 33px;
            line-height: 33px;
            overflow: hidden;
            width: 150px;
            font-style: 18px;
            font-family: "Hiragino Sans GB", "STHeiti", "微软雅黑", "Microsoft YaHei", SimHei, "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
        .sectionall {
            display: inline-block;
            width: 150px;
            float: left;
            line-height: 49px;
            font-style: 14px;
            color: #a5acb2;
        }
        .wordsnum {
            display: inline-block;
            width: 150px;
            float: left;
            line-height: 36px;
            font-style: 14px;
            color: #a5acb2;
        }
    }
    .newest {
        padding: 0 30px;
        .intro {
            margin: 0;
            line-height: 26px;
            font-style: 14px;
            overflow: hidden;
        }
        .time {
            float: left;
            line-height: 36px;
            font-style: 14px;
            color: #a5acb2;
        }
    }
    .collect {
        line-height: 118px;
        .num {
            display: inline-block;
            width: 100%;
            text-align: center;
        }
    }
    .state {
        text-align: center;
        &>span {
            display: inline-block;
        }
        .applying,
        .serial {
            line-height: 118px;
            width: 100%;
            text-align: center;
        }
        .applying {
            color: #499fff;
        }
        .serial {
            color: #06b527;
        }
        .state-btn {
            margin-top: 42px;
        }
        .error {
            color: #ff3c36;
            line-height: 36px;
            font-style: 14px;
            margin-top: 9px;
        }
        .error-msg {
            color: #c3c6c8;
            line-height: 28px;
            padding: 0 5px;
            max-height: 56px;
            overflow: hidden;
        }
    }
    .operation {
        padding-left: 35px;
        a {
            display: inline-block;
            float: left;
            line-height: 32px;
            width: 80px;
            color: #7798b1;
            font-style: 14px;
            margin-bottom: 11px;
        }
    }
}

// 作品列表-草稿箱
.drafts {
    width: 833px;
    height: auto;
}

.dr-t {
    margin-top: 36px;
    span {
        &:nth-child(1) {
            width: 86px;
        }
        &:nth-child(2) {
            width: 333px;
        }
        &:nth-child(3) {
            width: 86px;
        }
        &:nth-child(4) {
            width: 168px;
        }
        &:nth-child(5) {
            width: 160px;
        }
    }
}

.drafts-list {
    list-style: none;
    margin: 0;
    padding: 0;
    li {
        height: 35px;
        border-bottom: 1px dotted #cbcbcb;
        &>span {
            display: inline-block;
            float: left;
            text-align: center;
            line-height: 35px;
            &.num {
                width: 86px;
            }
            &.name {
                width: 333px;
            }
            &.wordsnum {
                width: 86px;
            }
            &.time {
                width: 168px;
            }
            &.operate {
                width: 160px;
                a {
                    display: inline-block;
                    float: left;
                    width: 80px;
                    text-align: center;
                    &.amend {
                        color: #499fff;
                    }
                    &.del {
                        color: #ff3a3a;
                    }
                }
            }
        }
    }
}

//作品列表-创建作品
.estWorks {
    width: 1140px;
    height: auto;
    .right-header-haveback {
        border-bottom: 1px solid #e1e1e1;
        margin-bottom: 25px;
    }
}

.estWorks-main {
    width: 836px;
    &>div {
        overflow: hidden;
        margin-bottom: 25px;
    }
    .works-name {
        .bookname {
            width: 707px;
            height: 36px;
            overflow: hidden;
        }
        input[type=text] {
            border: 1px solid #e1e1e1;
            border-radius: 3px;
            outline: none;
            width: 100%;
            height: 100%;
            padding-left: 14px;
        }
    }
    .works-cover {
        .cover {
            width: 100px;
            height: 130px;
            float: left;
            border: 1px solid #e1e1e1;
            border-radius: 3px;
            position: relative;
            overflow: hidden;
            img {
                width: 100%;
                height: 100%;
            }
            .uploading-btn {
                position: absolute;
                bottom: 0;
                left: 0;
                height: 26px;
                width: 100px;
                line-height: 26px;
                color: #fff;
                background: #499fff;
                text-align: center;
                cursor: pointer;
                input[type=file] {
                    position: absolute;
                    left: 0;
                    top: 0;
                    width: 100%;
                    height: 100%;
                    opacity: 0;
                    cursor: pointer;
                }
            }
        }
        .mag {
            float: left;
            color: #c7cacb;
            line-height: 20px;
            margin: 39px 0 0 30px;
        }
    }
    .works-chan {
        .chan-list {
            margin: 0;
            padding: 0;
            list-style: none;
            float: left;
        }
        li {
            float: left;
            line-height: 36px;
            width: 126px;
            span {
                position: relative;
                display: inline-block;
                float: left;
                width: 18px;
                height: 18px;
                border: 1px solid #e1e1e1;
                border-radius: 50%;
                overflow: hidden;
                margin: 8px 9px 0 0;
            }
            input[type=radio],
            label {
                position: absolute;
                width: 100%;
                height: 100%;
            }
            input[type=radio] {
                z-index: 2;
                opacity: 0;
                &:checked {
                    &+label {
                        background-image: bg('checked-blue.png');
                        background-repeat: no-repeat;
                        background-size: 11px 9px;
                        background-position: 50%;
                    }
                }
            }
            label {
                z-index: 1;
            }
        }
    }
    .works-type {
        .chan-list {
            margin: 0;
            padding: 0;
            list-style: none;
            float: left;
        }
        li {
            float: left;
            line-height: 36px;
            width: 126px;
            span {
                position: relative;
                display: inline-block;
                float: left;
                width: 18px;
                height: 18px;
                border: 1px solid #e1e1e1;
                border-radius: 50%;
                overflow: hidden;
                margin: 8px 9px 0 0;
            }
            input[type=radio],
            label {
                position: absolute;
                width: 100%;
                height: 100%;
            }
            input[type=radio] {
                z-index: 2;
                opacity: 0;
                &:checked {
                    &+label {
                        background-image: bg('checked-blue.png');
                        background-repeat: no-repeat;
                        background-size: 11px 9px;
                        background-position: 50%;
                    }
                }
            }
            label {
                z-index: 1;
            }
        }
    }
    .works-intro {
        .intro {
            width: 707px;
            height: 176px;
            overflow: hidden;
        }
        textarea {
            border: 1px solid #e1e1e1;
            border-radius: 3px;
            width: 100%;
            height: 100%;
            resize: none;
            padding: 5px 10px;
        }
        .num {
            line-height: 42px;
            color: #c7cacb;
        }
    }
    .works-tag {
        .label {
            position: relative;
            span {
                position: absolute;
                left: 0;
                top: 36px;
                line-height: 16px;
                color: #a5acb2;
            }
        }
        .tag-list {
            border: 1px solid #e1e1e1;
            border-radius: 3px;
            overflow: hidden;
            padding: 17px 0 6px 17px;
            span {
                float: left;
                margin: 0 7px 11px 0;
                line-height: 25px;
                padding: 0 10px;
                border: 1px solid #a5a5a5;
                border-radius: 27px;
                color: #a5a5a5;
                cursor: pointer;
                &.active {
                    color: #ff3a3a;
                    border-color: #ff3a3a;
                }
            }
        }
    }
    .works-est {
        .label {
            height: 36px;
        }
    }
}

//作品列表-编辑草稿-修改
.writeNewSection {
    width: 833px;
    height: auto;
    padding-bottom: 100px;
}

.writeNewSection-main {
    &>div {
        overflow: hidden;
    }
    .section-title,
    .section-text,
    .section-tag,
    .section-send,
    .section-charge {
        margin-top: 30px;
    }
    .title,
