*{margin:0;padding:0;list-style:none}.left-box{width:250px;padding:0 30px;background:#272e43}.left-box .item{width:160px;line-height:40px;background:#353d55;color:#4e5772;text-align:center;position:relative}.left-box .item.active,.left-box .item:hover{color:#cfdbf8}.left-box .item.active:nth-of-type(1):after,.left-box .item:hover:nth-of-type(1):after{background-position:-22px 0}.left-box .item.active:nth-of-type(2):after,.left-box .item:hover:nth-of-type(2):after{background-position:-22px -22px}.left-box .item.active:nth-of-type(3):after,.left-box .item:hover:nth-of-type(3):after{background-position:-22px -46px}.left-box .item.active:nth-of-type(4):after,.left-box .item:hover:nth-of-type(4):after{background-position:-22px -70px}.left-box .item.active:nth-of-type(5):after,.left-box .item:hover:nth-of-type(5):after{background-position:-22.5px -93px}.left-box .item:after{content:"";width:22px;height:23px;position:absolute;left:22px;top:50%;margin-top:-13px;background-image:url(../images/column-icon.png);background-repeat:no-repeat}.left-box .item:nth-of-type(1):after{background-position:0 0}.left-box .item:nth-of-type(2):after{background-position:0 -22px}.left-box .item:nth-of-type(3):after{background-position:0 -46px}.left-box .item:nth-of-type(4):after{background-position:0 -70px}.left-box .item:nth-of-type(5):after{background-position:.5px -93px}