.matter-main {
    height: 318px;
    margin-left: 80px;
    margin-top: 26px;
    margin-bottom: 80px;
    .form-box {
        overflow: hidden;
        margin-bottom: 32px;
    }
    .icon-iphone {
        width: 88px;
        height: 32px;
        margin-top: 8px;
        float: left;
        text-align: right;
        margin-right: 26px;
    }
    .form-control input[type='text'],
    .form-control input[type='password'] {
        width: 326px;
        height: 40px;
        border-radius: 4px;
        border: 1px solid #aaaaaa;
        text-indent: 24px;
    }
    .botton {
        padding: 0 28px;
        margin-left: 116px;
        margin-top: 30px;
    }
}

.box-login {
    .s {
        line-height: 44px;
        float: left;
        margin-right: 30px;
    }
    .item {
        width: 33px;
        height: 44px;
        display: inline-block;
        color: #c1c1c1;
        .i {
            font-style: normal;
            width: 31px;
            display: block;
            height: 26px;
            vertical-align: middle;
            background: bg('box-login.png') no-repeat 0 0;
            background-repeat: no-repeat;
            @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 2dppx), (min-resolution: 192dpi) {
                background-image: bg('box-login@2x.png');
                background-size: 31px;
            }
        }
        .text {
            font-style: normal;
            text-align: center;
            display: block;
        }
        &:nth-of-type(1) {
            margin-right: 54px;
            .i {
                background-position: 0px 1px;
            }
        }
        &:nth-of-type(2) {
            margin-right: 44px;
            .i {
                background-position: 0px -25px;
            }
        }
        &:nth-of-type(3) {
            .i {
                background-position: 0px -50px;
            }
        }
    }
}

// 第一次注册填写个人信息。
.fill-information {
    .right-header {
        margin-bottom: 34px;
    }
}

.form-horizontal {
    overflow: hidden;
    .form-group {
        width: 388px;
        height: 40px;
        border: none;
        margin-bottom: 34px;
        .icon {
            &:after {
                height: 23px;
            }
        }
        &:nth-of-type(1) {
            .icon {
                &:after {
                    background-position: 0px 0px;
                }
            }
        }
        &:nth-of-type(2) {
            .icon {
                &:after {
                    width: 27px;
                    height: 25px;
                    right: 24px;
                    background-position: 1px -70px;
                }
            }
        }
        &:nth-of-type(3) {
            .icon {
                &:after {
                    width: 25px;
                    background-position: 0px -148px;
                    right: 28px;
                }
            }
        }
        &:nth-of-type(4) {
            .icon {
                &:after {
                    width: 26px;
                    background-position: 0px -171px;
                    right: 24px;
                }
            }
        }
        &:nth-of-type(5) {
            .icon {
                &:after {
                    background-position: 2px -194px;
                }
            }
        }
        &:nth-of-type(6) {
            .icon {
                &:after {
                    height: 20px;
                    width: 24px;
                    right: 28px;
                    background-position: 0px -217px;
                }
            }
        }
        &:nth-of-type(7) {
            .icon {
                &:after {
                    height: 20px;
                    width: 24px;
                    right: 28px;
                    background-position: 0px -236px;
                }
            }
        }
        &:nth-of-type(8) {
            .icon {
                &:after {
                    height: 20px;
                    width: 24px;
                    right: 28px;
                    background-position: 0px -255px;
                }
            }
        }
        &:nth-of-type(9) {
            .icon {
                &:after {
                    height: 23px;
                    width: 24px;
                    right: 28px;
                    background-position: 0px -274px;
                }
            }
        }
        &:nth-of-type(10) {
            .icon {
                &:after {
                    height: 18px;
                    width: 24px;
                    right: 28px;
                    top: 12px;
                    background-position: 0px -296px;
                }
            }
        }
    }
    input[type=text] {
        margin: 0px;
        padding: 0px;
        width: 326px;
        height: 38px;
        border-radius: 50px;
        border: 1px solid #aaa;
        text-indent: 22px;
        color: #333;
    }
    .error {
        input[type=text] {
            border-color: #f50e0e;
        }
    }
    .disabled {
        input[type=text] {
            background-color: #d7d7d7;
            color: #333333;
        }
    }
    .icon {
        width: 62px;
        height: 40px;
        float: left;
        position: relative;
        &:after {
            position: absolute;
            content: "";
            width: 20px;
            height: 22px;
            right: 30px;
            top: 8px;
            background: bg('author.png') no-repeat;
            @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 2dppx), (min-resolution: 192dpi) {
                background-image: bg('author@2x.png');
                background-size: 26px;
            }
        }
    }
    .box {
        width: 326px;
        margin-left: 62px;
        .form-control {
            padding: 0px;
            position: relative;
            &.has-value {
                &::before {
                    display: none;
                }
            }
            textarea {
                position: relative;
                z-index: 1;
                width: 100%;
                height: 105px;
                padding: 9px 20px 5px;
                border: 1px solid #aaa;
                color: inherit;
                background-color: transparent;
                border-radius: 4px;
                resize: none;
            }
            &::before {
                content: attr(data-placeholder);
                position: absolute;
                line-height: 40px;
                width: 100%;
                top: 0;
                left: 0;
                padding-left: 21px;
                color: #aaa;
            }
        }
    }
}

.select-like {
    background: url(../images/select-like.png) no-repeat 289px 50%/22px 22px;
}

.form {
    width: 876px;
}

.submit {
    line-height: 34px;
    font-size: 14px;
    color: #fff;
    width: 100px;
    height: 34px;
    text-align: center;
    margin: 12px auto 12px;
    border-radius: 5px;
    cursor: pointer;
    background: #4a9bff;
}
