@import 'common/fun';
.issue {
    width: 1070px;
    height: auto;
}

.i-t {
    margin-top: 36px;
    span {
        &:nth-child(1) {
            width: 84px;
        }
        &:nth-child(2) {
            width: 86px;
        }
        &:nth-child(3) {
            width: 247px;
        }
        &:nth-child(4) {
            width: 86px;
        }
        &:nth-child(5) {
            width: 167px;
        }
        &:nth-child(6) {
            width: 167px;
        }
        &:nth-child(7) {
            width: 86px;
        }
        &:nth-child(8) {
            width: 147px;
        }
    }
}

.issue-list {
    list-style: none;
    margin: 0;
    padding: 0;
    li {
        height: 35px;
        border-bottom: 1px dotted #cbcbcb;
        .data-title {
            position: absolute;
            left: 50%;
            top: 100%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, .5);
            color: #fff;
            border-radius: 3px;
            z-index: 1;
            padding: 0 10px;
            white-space: nowrap;
            display: none;
            line-height: 24px;
        }
        .text {
            display: inline-block;
            width: 100%;
            height: 100%;
            @include showApo();
        }
        &>span {
            display: block;
            float: left;
            text-align: center;
            line-height: 35px;
            height: 35px;
            position: relative;
            cursor: default;
            &:hover {
                .data-title {
                    display: block;
                }
            }
            &.num {
                width: 84px;
            }
            &.rollname {
                width: 86px;
            }
            &.title {
                width: 247px;
                text-align: center;
                .text {
                    &.top {
                        &::before {
                            content: '[\9884]';
                            color: red;
                        }
                    }
                }
            }
            &.wordsnum {
                width: 86px;
            }
            &.time {
                width: 167px;
            }
            &.newtime {
                width: 167px;
            }
            &.subscription {
                width: 81px;
            }
            &.operate {
                width: 148px;
                padding-left: 10px;
                a {
                    display: inline-block;
                    float: left;
                    padding: 0 7px;
                    text-align: center;
                    color: #499fff;
                }
            }
        }
    }
}

.popup {
    .popup-body {
        padding: 0;
        .label {
            padding: 0;
            width: 110px;
            text-align: right;
            line-height: 34px;
            padding-right: 3px;
        }
        &>div {
            overflow: hidden;
        }
        .num,
        .title {
            line-height: 34px;
        }
        .select-box {}
        .roll-box {
            float: left;
            position: relative;
            width: 215px;
            height: 34px;
            border: 1px solid #e1e1e1;
            border-radius: 3px;
            overflow: hidden;
            margin-right: 14px;
            &::after {
                position: absolute;
                right: 13px;
                top: 16px;
                content: '';
                width: 10px;
                height: 5px;
                background-image: bg('read-arrow.png');
                background-size: 10px auto;
                background-position: 0 -5px;
                z-index: 3px;
            }
            .form-group {
                width: 100%;
                height: 32px;
                border: none;
                margin: 0px;
            }
        }
        .section-box {
            float: left;
            position: relative;
            width: 283px;
            height: 34px;
            border: 1px solid #e1e1e1;
            border-radius: 3px;
            overflow: hidden;
            &::after {
                position: absolute;
                right: 13px;
                top: 16px;
                content: '';
                width: 10px;
                height: 5px;
                background-image: bg('read-arrow.png');
                background-size: 10px auto;
                background-position: 0 -5px;
                z-index: 3px;
            }
            .form-group {
                width: 100%;
                height: 32px;
                border: none;
                margin: 0px;
            }
        }
        .hint {
            float: left;
            margin-left: 110px;
            color: #a5a5a5;
            line-height: 20px;
            margin-top: 15px;
        }
    }
}

.share-popup {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    position: fixed;
    left: 0px;
    top: 0px;
    color: #333333;
    .share-popup-box {
        width: 390px;
        height: 284px;
        background-color: #fff;
        padding: 50px 0;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -142px;
        margin-left: -195px;
        .popup-close {
            width: 25px;
            height: 25px;
            border-radius: 20px;
            background-color: #f3f3f3;
            display: block;
            float: right;
            margin-right: -12px;
            margin-top: -62px;
            background-image: bg('Close.png');
            background-size: 8px;
            background-repeat: no-repeat;
            background-position: center;
        }
        .cover {
            width: 122px;
            height: 122px;
            margin: 0 auto;
            img {
                width: 100%;
                height: 100%;
            }
        }
        .text {
            width: 100%;
            display: inline-block;
            text-align: center;
            line-height: 78px;
        }
    }
}


